<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_glossary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="3dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    card_view:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/lin_lay_glossary"
        android:background="@android:color/white"
        android:orientation="vertical"
        android:transitionName="layout_transition"
        android:padding="@dimen/padding">

        <TextView
            android:id="@+id/lbl_glossary_initial_letter"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:transitionName="initial_transition"
            android:textColor="@android:color/black"
            android:textSize="@dimen/initial_size" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/white"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/lbl_glossary_concepts_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:transitionName="name_transition"
                android:textColor="@android:color/black"
                android:textSize="@dimen/text_size" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>