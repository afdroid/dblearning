<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rel_lay_quiz"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".quizUnits.QuizUnitFourActivity">

    <Button
        android:id="@+id/btn_quiz_answer_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_quiz_answer_three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_above="@+id/btn_quiz_answer_four"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/btn_quiz_answer_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_above="@+id/btn_quiz_answer_three"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/btn_quiz_answer_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_above="@+id/btn_quiz_answer_two"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/lbl_quiz_score"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/lbl_quiz_question"
        android:layout_width="match_parent"
        android:layout_height="301dp"
        android:layout_below="@+id/lbl_quiz_score"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:textSize="24dp" />
</RelativeLayout>
